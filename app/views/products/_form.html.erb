<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name, class:"form-label" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :category_id, class:"form-label" %>
    <%= form.select :category_id, categories.map {|cat| [cat.name, cat.id]}, class:"form-select" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description, class:"form-label" %>
    <%= form.text_area :description, class:"form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :price, class:"form-label" %>
    <%= form.number_field :price, class:"form-control" %>
  </div>

  <h5 class='mb-3'> Condition </h5>

  <div class="form-check form-check-line mb-3">
    <%conditions.each do |option|%>
    <%= form.label :condition, format_condition(option), class:"form-label mr-1" %>
    <%= form.radio_button :condition, option, class:"mr-2" %>
    <%end%>
  </div>

  <div class='form-group mb-3'>
    <%=form.label :picture, class:'form-label'%>
    <%=form.file_field :picture, accept: 'image/png,image/jpg,image/jpeg', class:'form-control-file' %>
    <small class='form-text text-muted'> Accepted file types: PNG, JPG, or JPEG </small>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
