<h1 class = 'hero-title text-center'> Products </h1>
<div class = 'container'>
  <div class = 'row row-cols-sm-1 row-cols-md-2 row-cols-lg-4'>
    <% @products.each do |product| %>
    <div class = 'col mb-4'>
      <div class = 'card border-dark h-100'>
        <img class = 'card-img-top thumbnail' src = 'https://images.unsplash.com/photo-1511379938547-c1f69419868d?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80'>
        <div class = 'card-body'>
          <h5><%= product.name %></h5>
          <h6 class='card-subtitle my-2 text-muted'> Added <%=time_ago_in_words(product.created_at)%> ago </h6>
          <p class='card-text text-secondary text-truncate'><%=product.description%></p>
          <div class='d-flex justify-content-between'>
            <%=link_to "See More", product_path(product.id), class: "btn btn-outline-primary"%>
            <h5> $<%=product.price%> </h5>
          </div>
        </div>
      </div>
    </div> 
    <% end %>
  </div>
</div>